<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ricardovejarano.kaitradeapp.fragments.ForexInfoFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="@dimen/treintaydosdps"
            android:text="@string/forex"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/cerodps"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/veinticuatrodps"
            android:layout_marginStart="@dimen/veinticuatrodps"
            android:layout_marginTop="16dp"
            android:text="@string/forex_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/width_forex_img"
            android:layout_height="@dimen/height_forex_img"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="@dimen/diesyseiddps"
            android:src="@drawable/eurusd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

