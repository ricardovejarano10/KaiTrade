<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/containerUserProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trecientosveinticincodps">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/doscientosdps"
                android:background="@drawable/gradient"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/ciendps"
                    android:layout_height="@dimen/ciendps"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/cuarentaycincodps"
                    android:src="@drawable/newuser" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/diezdps"
                    android:text="@string/new_user"
                    android:textColor="@color/white"
                    android:textSize="@dimen/veintiunsp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/trecientoscincuentadps"
                android:layout_height="@dimen/cientoveintedps"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/cientonoventadps">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="@dimen/cerodps"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favorite"
                            android:textSize="@dimen/veintesp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewMarket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/diezdps"
                            android:text="@string/forex"
                            android:textSize="@dimen/veintesp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/cerodps"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age"
                            android:textSize="@dimen/veintesp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/edad_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="@string/edad_usuario"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/cerodps"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/broker"
                            android:textSize="@dimen/veintesp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textEditBroker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/diezdps"
                            android:text="@string/broker_user"
                            android:textSize="@dimen/veintesp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/docientossesentadps"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/veinticincodps">

                <ImageView
                    android:layout_width="@dimen/treintayseiddps"
                    android:layout_height="@dimen/treintayseiddps"
                    android:src="@drawable/ic_email_user" />

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/diezdps"
                    android:text="@string/newuser_gmail_com"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/diezdps"
            android:background="@drawable/buttonstylegradient"
            android:text="@string/edit_profile"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>




