<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ricardovejarano.kaitradeapp.fragments.FuturesInfoFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="@dimen/treintaydosdps"
            android:text="@string/futures_market"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/doscientosdps"
            android:layout_height="@dimen/ciendps"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="@dimen/veinticuatrodps"
            android:src="@drawable/futures_trading4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/cerodps"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/veinticuatrodps"
            android:layout_marginStart="@dimen/veinticuatrodps"
            android:layout_marginTop="@dimen/treintaydosdps"
            android:text="@string/futures_description"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

