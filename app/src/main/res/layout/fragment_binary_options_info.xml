<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ricardovejarano.kaitradeapp.fragments.BinaryOptionsInfoFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="16dp"
            android:text="@string/binary_options_market"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/cientocincuentadps"
            android:layout_height="@dimen/ochentadps"
            android:layout_marginEnd="@dimen/ochodps"
            android:layout_marginStart="@dimen/ochodps"
            android:layout_marginTop="@dimen/diesyseiddps"
            android:src="@drawable/binaryoptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/cerodps"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/veinticuatrodps"
            android:layout_marginStart="@dimen/veinticuatrodps"
            android:layout_marginTop="16dp"
            android:text="@string/binary_options_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

